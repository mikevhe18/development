<odoo>
    <data noupdate="0">
        <record id="policy_template_dev_model" model="policy.template">
            <field name="name">Standard: Dev Model</field>
            <field
                        name="model_id"
                        ref="development_model.model_dev_model"
                    />
            <field
                        name="state_field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','state')]"
                    />
            <field name="sequence" eval="100" />
            <field name="python_code">result=True</field>
        </record>

        <record id="policy_template_dev_model_confirm" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','confirm_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','=','draft')]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_approve" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','approve_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','=','confirm')]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_done" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','done_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','=','open')]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_reject" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','reject_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','=','confirm')]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_cancel" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','cancel_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','in',['draft','open','confirm','done'])]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_restart" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','restart_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','in',['cancel','reject'])]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>

        <record id="policy_template_dev_model_manual_number" model="policy.template_detail">
            <field name="template_id" ref="policy_template_dev_model" />
            <field
                        name="field_id"
                        search="[('model_id.model','=','dev.model'),('name','=','manual_number_ok')]"
                    />
            <field name="restrict_state" eval="1" />
            <field
                        name="state_ids"
                        search="[('field_id.model_id.model','=','dev.model'),('value','=','draft')]"
                    />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field name="group_ids" eval="[(6,0,[ref('base.group_user')])]" />
            <field name="restrict_additional" eval="0" />
        </record>
    </data>
</odoo>

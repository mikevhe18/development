<odoo>
    <record id="dev_model_view_tree" model="ir.ui.view">
        <field name="name">dev.model.tree</field>
        <field name="model">dev.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="dev_model_view_form" model="ir.ui.view">
        <field name="name">dev.model.form</field>
        <field name="model">dev.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="action_done" type="object" string="Done" class="oe_highlight" attrs="{'invisible':[('state','!=','open')]}"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" attrs="{'invisible':[('state','in',['cancel','reject'])]}"/>
                    <button name="action_restart" type="object" string="Restart" class="oe_highlight" attrs="{'invisible':[('state','not in',['cancel','reject'])]}"/>
                    <button name="action_request_approval"
                        string="Request Approval"
                        attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                        type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,open,done"/>
                </header>
                <sheet>
                <field name="need_validation" invisible="0"/>
                <field name="approved" invisible="0"/>
                <field name="rejected" invisible="0"/>
                <div role="alert" class="alert alert-warning"
                     attrs="{'invisible': ['|', '|', '|',
                     ('approved', '=', True), ('state', 'not in', ['confirm']),
                     ('rejected', '=', True), ('approval_ids', '=', [])]}"
                     style="margin-bottom:0px;">
                    <p><i class="fa fa-info-circle"/>This Record needs to be
                        approved.
                        <button name="action_approve_approval"
                            string="Approve"
                            attrs="{'invisible': [('approval_ids', '=', [])]}"
                            type="object"
                            class="oe_inline oe_button btn-success"
                            icon="fa-check"/>
                        <button name="action_reject_approval"
                            string="Reject"
                            type="object"
                            class="btn-icon btn-danger"
                            icon="fa-stop"/>
                    </p>
                </div>
                <div role="alert" class="alert alert-success"
                     attrs="{'invisible': ['|', '|', ('approved', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                     style="margin-bottom:0px;">
                    <p><i class="fa fa-thumbs-up"/> Operation has been <b>approved</b>!</p>
                </div>
                <div role="alert" class="alert alert-danger"
                     attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                     style="margin-bottom:0px;">
                    <p><i class="fa fa-thumbs-down"/> Operation has been <b>rejected</b>.</p>
                </div>

                <div name="div_smart_buttons" class="oe_right oe_button_box">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </div>

                <group>
                    <group name="left">
                        <field name="model_type_id" />
                    </group>
                    <group name="right">
                        <field name="date" />
                        <field name="active" />
                    </group>
                </group>
                <notebook>
                    <page
                        name="page_note"
                        string="Notes"
                    >
                        <field name="notes" nolabel="1" />
                    </page>
                    <page string="Approvals" name="tier_validation">
                        <group>
                            <field name="approval_template_id"/>
                            <field name="active_approver_partner_ids" widget="many2many_tags"/>
                        </group>
                        <field
                            name="approval_ids"
                            attrs="{'invisible':[('approval_ids', '=', [])]}"
                            nolabel="1"
                        />
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="dev_model_view_action" model="ir.actions.act_window">
        <field name="name">Development Model</field>
        <field name="res_model">dev.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_dev_model"
        parent="menu_dev_root"
        action="dev_model_view_action"
    />
</odoo>

<odoo>
    <record id="dev_model_view_tree" model="ir.ui.view">
        <field name="name">dev.model.tree</field>
        <field name="model">dev.model</field>
        <field name="arch" type="xml">
            <tree
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'done'"
                    decoration-muted="state == 'cancel'"
                >
                    <field name="id" optional="hide" />
                    <field name="display_name" string="# Document" />
                    <field name="model_type_id"/>
                    <field name="date"/>
                    <field
                            name="state"
                            widget="badge"
                            decoration-info="state == 'draft'"
                            decoration-success="state == 'done'"
                            decoration-muted="state == 'cancel'"
                        />
            </tree>
        </field>
    </record>

    <record id="dev_model_view_form" model="ir.ui.view">
        <field name="name">dev.model.form</field>
        <field name="model">dev.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                            confirm="Confirm data. Are you sure?"
                            attrs="{'invisible':[('confirm_ok','!=',True)]}"
                        />
                    <button
                            name="action_approve_approval"
                            string="Approve"
                            type="object"
                            class="oe_highlight"
                            confirm="Approve data. Are you sure?"
                            attrs="{'invisible':[('approve_ok','!=',True)]}"
                        />
                    <button
                            name="action_reject_approval"
                            string="Reject"
                            type="object"
                            confirm="Reject data. Are you sure?"
                            attrs="{'invisible':[('reject_ok','!=',True)]}"
                        />
                    <button
                            name="%(ssi_transaction_cancel_mixin.base_select_cancel_reason_action)d"
                            string="Cancel"
                            type="action"
                            attrs="{'invisible':[('cancel_ok','!=',True)]}"
                        />
                    <button
                            name="action_restart"
                            string="Restart"
                            type="object"
                            confirm="Restart data. Are you sure?"
                            attrs="{'invisible':[('restart_ok','!=',True)]}"
                        />
                    <button
                            name="action_done"
                            string="Done"
                            type="object"
                            class="oe_highlight"
                            confirm="Finished data. Are you sure?"
                            attrs="{'invisible':[('done_ok','!=',True)]}"
                        />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,open,done"/>
                </header>
                <field name="need_validation" invisible="1" />
                <field name="approved" invisible="1" />
                <field name="rejected" invisible="1" />
                <sheet>
                    <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                    </div>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 500px;">
                            <label for="name" />
                            <h1>
                                <field
                                        name="name"
                                        class="oe_edit_only"
                                        attrs="{'readonly':[('manual_number_ok','=',False)]}"
                                    />
                                <field name="display_name" class="oe_read_only" />
                            </h1>
                            <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                                <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                                <field name="cancel_reason_id" class="oe_inline" />
                            </h2>
                        </div>
                    </div>

                    <group>
                        <group name="left">
                            <field name="number" />
                            <field name="model_type_id" />
                            <field name="date_time" />
                            <field name="create_date" />
                        </group>
                        <group name="right">
                            <field name="date" />
                            <field name="user_id" />
                            <field name="partner_id" />
                        </group>
                    </group>
                    <notebook>
                        <page
                            name="page_detail"
                            string="Details"
                        >
                            <field name="detail_ids" nolabel="1" />
                        </page>
                        <page
                            name="page_note"
                            string="Notes"
                        >
                            <field name="note" nolabel="1" />
                        </page>
                        <page string="Approvals" name="multiple_approval">
                            <group name="grp_multiple_approval_1">
                                <field name="approval_template_id" />
                                <button
                                        name="action_reload_approval_template"
                                        string="Reload Template"
                                        class="oe_highlight"
                                        type="object"
                                    />
                                <newLine />
                                <field
                                        name="active_approver_partner_ids"
                                        widget="many2many_tags"
                                    />
                            </group>
                            <field
                                    name="approval_ids"
                                    attrs="{'invisible':[('approval_ids', '=', [])]}"
                                    nolabel="1"
                                />
                        </page>
                        <page name="policy" string="Policies" groups="base.group_system">
                            <group name="policy_1" colspan="4" col="2">
                                <field name="policy_template_id" />
                                <button
                                        name="action_reload_policy_template"
                                        type="object"
                                        string="Reload Template Policy"
                                        class="oe_highlight"
                                        icon="fa-refresh"
                                    />
                                <field name="confirm_ok" />
                                <field name="approve_ok" />
                                <field name="done_ok" />
                                <field name="reject_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                                <field name="manual_number_ok" />
                            </group>
                        </page>
                        <page name="custom_information" string="Custom Information">
                            <group name="custom_info">
                                <field name="custom_info_template_id" />
                                <button
                                            name="action_reload_custom_info_template"
                                            string="Reload Custom Info Template"
                                            type="object"
                                        />
                                <button
                                            name="action_reload_custom_info"
                                            string="Reload Custom Info"
                                            type="object"
                                        />
                            </group>
                            <group name="detail_info" colspan="4" col="2">
                                <field name="custom_info_ids" colspan="4" nolabel="1" />
                            </group>
                        </page>
                        <page name="status_check" string="Check Status">
                            <group name="status_check_1" colspan="4" col="2">
                                <field name="status_check_template_id" />
                                <button
                                    name="action_reload_status_check_template"
                                    string="Reload Status Check Template"
                                    type="object"
                                />
                                <button
                                    name="action_reload_status_check"
                                    string="Reload Status Check Item"
                                    type="object"
                                />
                                <field name="state_change_constrain_template_id" />
                            </group>
                            <field name="status_check_ids" nolabel="1" />
                        </page>
                    </notebook>
            </sheet>
            <div class="oe_chatter">
                <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                <field name="message_ids" widget="mail_thread" />
            </div>
            </form>
        </field>
    </record>

    <record id="dev_model_view_action" model="ir.actions.act_window">
        <field name="name">Development Model</field>
        <field name="res_model">dev.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_dev_model"
        parent="menu_dev_root"
        action="dev_model_view_action"
    />
</odoo>

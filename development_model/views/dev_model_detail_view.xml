<odoo>
    <record id="dev_model_detail_view_tree" model="ir.ui.view">
        <field name="name">dev.model.detail.tree</field>
        <field name="model">dev.model_detail</field>
        <field name="arch" type="xml">
            <tree string="Details">
                <field name="description" />
                <field name="amount" />
            </tree>
        </field>
    </record>

    <record id="dev_model_detail_view_form" model="ir.ui.view">
        <field name="name">dev.model.detail.form</field>
        <field name="model">dev.model_detail</field>
        <field name="arch" type="xml">
            <form string="Details">
                <sheet>
                    <group>
                        <field name="description" />
                        <field name="amount" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dev_model_detail_action" model="ir.actions.act_window">
        <field name="name">Development Detail</field>
        <field name="res_model">dev.model_detail</field>
        <field name="view_id" ref="dev_model_detail_view_tree" />
    </record>

    <menuitem
        id="menu_dev_model_detail"
        parent="menu_dev_root"
        action="dev_model_detail_action"
    />
</odoo>
